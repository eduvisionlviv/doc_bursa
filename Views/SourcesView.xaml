<UserControl x:Class="doc_bursa.Views.SourcesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:doc_bursa.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.DataContext>
        <vm:SourcesViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid Visibility="{Binding IsAddingSource, Converter={StaticResource InverseBoolToVis}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Джерела даних" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                <Button Content="+ Додати джерело" Command="{Binding StartAddSourceCommand}" 
                        Style="{StaticResource PrimaryButtonStyle}" Margin="20,0,0,0"/>
                <Button Content="Імпорт CSV" Command="{Binding ImportCsvCommand}" 
                        Style="{StaticResource NavButtonStyle}" Margin="10,0,0,0" Background="#2C3E50"/>
                <Button Content="Імпорт Excel" Command="{Binding ImportExcelCommand}" 
                        Style="{StaticResource NavButtonStyle}" Margin="10,0,0,0" Background="#27AE60"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding Sources}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                                            <TextBlock Text="{Binding Type}" Foreground="#BDC3C7" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding ClientId, StringFormat='Рахунок: {0}'}" Foreground="Gray"/>
                                        <TextBlock Text="{Binding LastSync, StringFormat='Оновлено: {0:dd.MM.yyyy HH:mm}'}" Foreground="Gray"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Button Content="Синхронізувати" 
                                                Command="{Binding DataContext.SyncSourceCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource NavButtonStyle}" Margin="0,0,10,0"/>
                                        <Button Content="Видалити" 
                                                Command="{Binding DataContext.DeleteSourceCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource DangerButtonStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Border Background="#1F2937" CornerRadius="8" Padding="30" VerticalAlignment="Center" HorizontalAlignment="Center"
                Visibility="{Binding IsAddingSource, Converter={StaticResource BoolToVis}}" Width="500">
            <StackPanel>
                <TextBlock Text="Нове джерело" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                <TextBlock Text="Назва" Foreground="Gray"/>
                <TextBox Text="{Binding NewSourceName, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="10" Margin="0,5,0,15"/>

                <TextBlock Text="Тип банку" Foreground="Gray"/>
                <ComboBox ItemsSource="{Binding AvailableTypes}" SelectedItem="{Binding NewSourceType}" 
                          Padding="10" Margin="0,5,0,15"/>

                <TextBlock Text="API Токен (AutoClient)" Foreground="Gray"/>
                <TextBox Text="{Binding NewSourceToken, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="10" Margin="0,5,0,15"/>

                <TextBlock Text="Номер рахунку (IBAN або ID, не обов'язково)" Foreground="Gray"/>
                <TextBox Text="{Binding NewSourceClientId, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="10" Margin="0,5,0,20"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Скасувати" Command="{Binding CancelAddCommand}" 
                            Style="{StaticResource NavButtonStyle}" Margin="0,0,10,0"/>
                    <Button Content="Зберегти" Command="{Binding SaveSourceCommand}" 
                            Style="{StaticResource SuccessButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Background="#80000000" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}">
            <TextBlock Text="Зачекайте..." Foreground="White" FontSize="24" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
