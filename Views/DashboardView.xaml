<UserControl x:Class="doc_bursa.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:doc_bursa.ViewModels"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF">    <UserControl.DataContext>
        <vm:DashboardViewModel/>
    </UserControl.DataContext>

    <Grid Background="#0B1220">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Панель управління" 
                  FontSize="28" 
                  FontWeight="SemiBold" 
                  Margin="0,0,0,20"
                  Foreground="#E5E7EB"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="Період:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#E5E7EB"/>
            <ComboBox ItemsSource="{Binding Periods}" 
                     SelectedItem="{Binding SelectedPeriod}" 
                     Width="200"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Доходи" FontSize="14" Foreground="#9CA3AF"/>
                        <TextBlock Text="{Binding TotalIncome, StringFormat='{}{0:N2} ₴'}" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Foreground="#27AE60" 
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0,5,0">
                    <StackPanel>
                        <TextBlock Text="Витрати" FontSize="14" Foreground="#9CA3AF"/>
                        <TextBlock Text="{Binding TotalExpenses, StringFormat='{}{0:N2} ₴'}" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Foreground="#E74C3C" 
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Баланс" FontSize="14" Foreground="#9CA3AF"/>
                        <TextBlock Text="{Binding Balance, StringFormat='{}{0:N2} ₴'}" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Foreground="#3498DB" 
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Net Worth" FontSize="14" Foreground="#9CA3AF"/>
                        <TextBlock Text="{Binding NetWorth, StringFormat='{}{0:N2} ₴'}" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Foreground="#9B59B6" 
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="4" Style="{StaticResource CardStyle}" Margin="10,0,0,0">
                    <StackPanel>
                        <TextBlock Text="В дорозі" FontSize="14" Foreground="#9CA3AF"/>
                        <TextBlock Text="{Binding InTransitTransfers, StringFormat='{}{0:N2} ₴'}" 
                                  FontSize="24" 
                                  FontWeight="Bold" 
                                  Foreground="#F59E0B" 
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Міні-тренд (7 днів)" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,15"
                                  Foreground="#E5E7EB"/>
                        <lvc:CartesianChart Series="{Binding MiniTrendSeries}" 
                                            XAxes="{Binding MiniTrendAxes}"
                                            Height="200"
                                            LegendPosition="Top"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Останні транзакції" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,15"
                                  Foreground="#E5E7EB"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding RecentTransactions}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#ECF0F1" 
                                               BorderThickness="0,0,0,1" 
                                               Padding="0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="80"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="120"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding Date, StringFormat='dd.MM'}" FontWeight="SemiBold" Foreground="#E5E7EB"/>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Description}" FontWeight="SemiBold" Foreground="#E5E7EB"/>
                                                    <TextBlock Text="{Binding Category}" FontSize="12" Foreground="#9CA3AF"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="2" Text="{Binding Amount, StringFormat='{}{0:N2} ₴'}" 
                                                          HorizontalAlignment="Right"
                                                          FontWeight="Bold"
                                                          Foreground="#E5E7EB"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Net Worth по рахунках" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,15"
                                  Foreground="#E5E7EB"/>
                        <lvc:CartesianChart Series="{Binding NetWorthSeries}"
                                            XAxes="{Binding NetWorthAxes}"
                                            Height="220"
                                            LegendPosition="Top"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="Cashflow" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,15"
                                  Foreground="#E5E7EB"/>
                        <lvc:CartesianChart Series="{Binding CashflowSeries}"
                                            XAxes="{Binding CashflowAxes}"
                                            Height="220"
                                            LegendPosition="Top"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Structure" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Margin="0,0,0,15"
                                  Foreground="#E5E7EB"/>
                        <lvc:PieChart Series="{Binding StructureSeries}"
                                      LegendPosition="Right"
                                      Height="220"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Grid.Row="3" Style="{StaticResource CardStyle}" Margin="0,20,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Витрати по категоріях" 
                              FontSize="18" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,15"
                              Foreground="#E5E7EB"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Categories}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#ECF0F1" 
                                           BorderThickness="0,0,0,1" 
                                           Padding="0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" 
                                                          FontWeight="SemiBold" 
                                                          FontSize="14"
                                                          Foreground="#E5E7EB"/>
                                                <TextBlock Text="{Binding Count, StringFormat='{}{0} транзакцій'}" 
                                                          FontSize="12" 
                                                          Foreground="#9CA3AF" 
                                                          Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="1" 
                                                      Text="{Binding Amount, StringFormat='{}{0:N2} ₴'}" 
                                                      FontSize="16" 
                                                      FontWeight="Bold" 
                                                      VerticalAlignment="Center"
                                                      Foreground="#E5E7EB"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
