<UserControl x:Class="FinDesk.Views.BudgetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="0 0 0 12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Бюджети" FontSize="26" FontWeight="Bold" Foreground="#2C3E50" VerticalAlignment="Center"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Оновити" Command="{Binding RefreshDataCommand}" Margin="12 0 0 0" Padding="12 6"/>
                <Button Content="Категорії" Command="{Binding RefreshCategoriesCommand}" Margin="8 0 0 0" Padding="12 6"/>
            </StackPanel>
        </Grid>

        <Border Grid.Row="1" Grid.Column="0" Background="White" Padding="16" Margin="0 0 12 0" CornerRadius="8" >
            <StackPanel>
                <TextBlock Text="Налаштування бюджету" FontWeight="Bold" FontSize="16" Margin="0 0 0 12"/>
                <TextBlock Text="Назва" />
                <TextBox Text="{Binding NewBudgetName, UpdateSourceTrigger=PropertyChanged}" Margin="0 4 0 8"/>

                <TextBlock Text="Категорія" />
                <ComboBox ItemsSource="{Binding Categories}" SelectedItem="{Binding NewBudgetCategory}" Text="{Binding NewBudgetCategory, UpdateSourceTrigger=PropertyChanged}" IsEditable="True" Margin="0 4 0 8"/>

                <TextBlock Text="Ліміт (місячний)" />
                <TextBox Text="{Binding NewBudgetLimit}" Margin="0 4 0 8"/>

                <TextBlock Text="Періодичність" />
                <ComboBox ItemsSource="{Binding Frequencies}" SelectedItem="{Binding SelectedFrequency}" Margin="0 4 0 8"/>

                <TextBlock Text="Поріг сповіщення (%)" />
                <Slider Minimum="10" Maximum="100" Value="{Binding NewBudgetAlertThreshold}" TickFrequency="10" IsSnapToTickEnabled="True" Margin="0 4 0 4"/>
                <TextBlock Text="{Binding NewBudgetAlertThreshold, StringFormat='Поточний поріг: {0}%'}" Margin="0 0 0 8"/>

                <TextBlock Text="Початок періоду" />
                <DatePicker SelectedDate="{Binding NewBudgetStartDate}" Margin="0 4 0 8"/>

                <TextBlock Text="Опис" />
                <TextBox Text="{Binding NewBudgetDescription}" AcceptsReturn="True" Height="60" TextWrapping="Wrap" Margin="0 4 0 12"/>

                <Button Content="Додати бюджет" Command="{Binding AddBudgetCommand}" Padding="12 6" HorizontalAlignment="Right"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Margin="0 0 0 0">
            <Border Background="White" Padding="16" CornerRadius="8" Margin="0 0 0 12">
                <StackPanel>
                    <TextBlock Text="Активні бюджети" FontWeight="Bold" FontSize="16" Margin="0 0 0 12"/>
                    <ListBox ItemsSource="{Binding Budgets}" SelectedItem="{Binding SelectedBudget}" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="1" Padding="12" Margin="0 0 0 8" CornerRadius="6">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Budget.Name}" FontWeight="Bold" FontSize="14"/>
                                            <TextBlock Text="{Binding Budget.Category, StringFormat=' • {0}'}" Foreground="#7F8C8D" Margin="8 0 0 0"/>
                                            <Button Content="Видалити" Command="{Binding DataContext.DeleteBudgetCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" CommandParameter="{Binding Budget.Id}" HorizontalAlignment="Right" Margin="12 0 0 0" Padding="8 4"/>
                                        </StackPanel>
                                        <ProgressBar Height="12" Margin="0 6 0 4" Value="{Binding UsagePercentage}" Maximum="100"/>
                                        <TextBlock Text="{Binding UsagePercentage, StringFormat='Використано: {0}%'}" Foreground="#2C3E50"/>
                                        <TextBlock Text="{Binding Remaining, StringFormat='Залишок: {0:C}'}" Foreground="#2C3E50"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <Border Background="White" Padding="16" CornerRadius="8" Margin="0 0 0 12">
                <StackPanel>
                    <TextBlock Text="Сповіщення" FontWeight="Bold" FontSize="16" Margin="0 0 0 8"/>
                    <ItemsControl ItemsSource="{Binding Alerts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#FFF8E1" BorderBrush="#F39C12" BorderThickness="1" Padding="10" CornerRadius="6" Margin="0 0 0 6">
                                    <StackPanel>
                                        <TextBlock Text="{Binding BudgetName}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Message}" />
                                        <TextBlock Text="{Binding UsagePercentage, StringFormat='Використання: {0}%'}" Foreground="#D35400"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <Border Background="White" Padding="16" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="Динаміка" FontWeight="Bold" FontSize="16" Margin="0 0 0 12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Місячний зріз" FontWeight="Bold"/>
                            <ItemsControl ItemsSource="{Binding MonthlySummaries}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0 2">
                                            <TextBlock Text="{Binding PeriodLabel}" Width="70"/>
                                            <ProgressBar Value="{Binding UsagePercentage}" Maximum="100" Width="140" Height="8" Margin="6 0"/>
                                            <TextBlock Text="{Binding UsagePercentage, StringFormat=' {0}%'}" Width="60"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Річний зріз" FontWeight="Bold"/>
                            <ItemsControl ItemsSource="{Binding YearlySummaries}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0 2">
                                            <TextBlock Text="{Binding PeriodLabel}" Width="70"/>
                                            <ProgressBar Value="{Binding UsagePercentage}" Maximum="100" Width="140" Height="8" Margin="6 0"/>
                                            <TextBlock Text="{Binding UsagePercentage, StringFormat=' {0}%'}" Width="60"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
