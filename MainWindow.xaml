<Window x:Class="FinDesk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:FinDesk.Views"
        Title="FinDesk - Управління фінансами" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2C3E50" Padding="0">
            <StackPanel>
                <TextBlock Text="FinDesk" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          Margin="20,30,20,40"
                          HorizontalAlignment="Center"/>

                <Button Content="Панель" 
                       Style="{StaticResource NavButtonStyle}"
                       Command="{Binding NavigateCommand}"
                       CommandParameter="Dashboard"/>
                
                <Button Content="Транзакції" 
                       Style="{StaticResource NavButtonStyle}"
                       Command="{Binding NavigateCommand}"
                       CommandParameter="Transactions"/>
                
                <Button Content="Джерела даних" 
                       Style="{StaticResource NavButtonStyle}"
                       Command="{Binding NavigateCommand}"
                       CommandParameter="Sources"/>

            <Button Content="Групи"
                    Style="{StaticResource NavButtonStyle}"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="Groups"/>

                <Button Content="Аналітика"
                        Style="{StaticResource NavButtonStyle}"
                        Command="{Binding NavigateCommand}"
                        CommandParameter="Analytics"/>
            </StackPanel>
        </Border>

        <ContentControl Grid.Column="1" Content="{Binding CurrentView}" Margin="20"/>
    </Grid>
</Window>


